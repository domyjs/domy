{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "strictBindCallApply": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@domyjs/*": ["packages/*/src"]
    }
  },
  "include": ["packages/**/*", "test/jest/**/*"]
}
